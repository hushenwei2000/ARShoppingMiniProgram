page {
    height: 100%;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 0;
    box-sizing: border-box;
}

/*登录图片*/
.login-icon {
    margin-top: 30px;
    flex: none;
}

.login-img {
    position: relative;
    left: -30rpx; 
    /* -越多越左边 */
    width: 375rpx;
}

/*表单内容*/
.login-from {
    margin-top: 14px;
    flex: auto;
    height: 100%;
}

.inputView {
    position: relative;
    background-color: #fff;
    line-height: 44px;
}

/*输入框*/
.nameImage,
.keyImage {
    position: relative;
    top: 2px;
    margin-left: 22px;
    width: 14px;
    height: 14px
}

.loginLab {
    margin: 15px 10px 15px 10px;
    color: #545454;
    font-size: 14px
}

.inputText {
    flex: block;
    float: right;
    text-align: left;
    margin-right: 22px;
    margin-top: 11px;
    color: #bbb;
    font-size: 14px
}

.getCode {
    position: absolute;
    right: 5px;
    top: 11px;
    bottom: 11px;
    width: 64px;
    z-index: 100;
    /* height: 20px; */
    line-height: 22px;
    font-size: 10px;
    text-align: center;
    color: white;
}

.line {
    width: 100%;
    height: 1px;
    background-color: #cccccc;
    margin-top: 1px;
}

/*按钮*/
.loginBtnView {
    width: 100%;
    height: auto;
    margin-top: 0px;
    margin-bottom: 0px;
    padding-bottom: 0px;
}

.loginBtn {
    width: 58%;
    margin: 35px auto 0 auto;
    background-color: rgb(205,128,0);
    line-height: 38px;
    font-size: 17px;
    text-align: center;
    border-radius: 10px;
    color: white;
}

.regBtn {
    width: 100%;
    margin: 20px auto 0 auto;
    /* background-color: rgb(205,128,0); */
    line-height: 30px;
    font-size: 13px;
    text-align: center;
    border-radius: 10px;
    color: #bbb;
    text-decoration: underline;
}