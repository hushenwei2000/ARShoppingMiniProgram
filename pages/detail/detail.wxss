.swiper-container {
    position: relative;
    height: 100vw;
}

swiper {
    height: 100vw;
    width: 100%;
}

.swiper-image {
    height: 100vw;
    width: 100%;
}

.title {
    margin: 10px 10px 0 10px;
    font-size: 20px;
    color: rgb(65, 44, 9);
}

.desc {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 10px 10px 0 10px;

}

.price {
    font-size: 25px;
    color: rgb(208, 2, 27);
}

.like {
    width: 100px;

}

.like image {
    width: 100%;
}

.detail {
    margin: 10px 25px 30px 25px;
    border: 1px solid rgb(9, 9, 9);

}

.detail-top {
    border-bottom: 1px solid rgb(9, 9, 9);
    padding: 15px 0;
    width: 100%;
    text-align: center;
    line-height: 20px;
    font-weight: bold;
}

.detail-bottom {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 240px;
    background-color: rgb(244, 244, 244);
}

.detail-bottom image {

    height: 45px;
}