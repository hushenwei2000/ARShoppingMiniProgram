page {
  background: rgb(245,245,245);
  margin-bottom: 70px;
}

.search-mask {
  position: fixed;
  top: 45px;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #000;
  opacity: 0.4;
  z-index: 1000;
}

.search-items {
  position: fixed;
  top: 45px;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1001;
}

.search-item {
  width: 100%;
  height: 30px;
  line-height: 30px;
  padding-left: 20px;
  border-top: 1px solid #aaa;
  background-color: #fff;
  font-size: 12px;
  color: #666;
}

.swiper-container {
  position: relative;
  height: 20vh;
}

swiper {
  height: 20vh;
  width: 100%;
}

.swiper-image {
  height: 100%;
  width: 100%;
}

.squares {
  margin-top: 40px;
  display: flex;
}

.squares-item {
  margin-left: 15px;
  width: 90px;
  flex: none;
  background-color: #fff;
  box-shadow: 2px 2px 2px #dfdfdf, -2px 2px 4px #dfdfdf, 2px 4px 14px #dfdfdf;

}

.squares image {
  display: block;
  width: 40%;
  margin: 10px auto 0 auto;
}

.squares text {
  display: block;
  width: 100%;
  text-align: center;
  line-height: 36px;
  font-size: 13px;
  color: rgb(99,99,99);
}

.title {
  margin: 30px 0 30px 10px;
  border-left: 5px solid rgb(205,128,0);
  padding-left: 10px;
  color: rgb(65,44,9);
}
