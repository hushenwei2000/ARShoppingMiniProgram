page {
  background: #e5e5e5;
  margin-bottom: 70px;
}

.swiper-container {
  position: relative;
  height: 20vh;
}

swiper {
  height: 20vh;
  width: 100%;
}

.swiper-image {
  height: 100%;
  width: 100%;
}

.squares {
  margin-top: 40px;
  display: flex;
}

.squares-item {
  margin-left: 25px;
  width: 90px;
  flex: none;
  background-color: #fff;
}

.squares image {
  display: block;
  width: 50%;
  margin: 0 auto;
}

.squares text {
  display: block;
  width: 100%;
  text-align: center;
  line-height: 36px;
  font-size: 13px;
}

.title {
  margin: 30px 0 30px 10px;
  border-left: 10px solid red;
  padding-left: 10px;
}