.mall {
    width: calc(100vw - 33px);
    display: flex;
    justify-content: space-evenly;
    padding: 20px 11px 80px 11px;
}

.mall-left,
.mall-right {
    width: 50%;
}

.mall-left {
    margin-right: 10px;
}

.item {
    position: relative;
    flex: none;
    margin-left: 10px;
    margin-bottom: 20px;
    padding-bottom: 5px;
    width: 95%;
    box-shadow: 2px 2px 2px #dfdfdf, -2px 2px 4px #dfdfdf, 2px 4px 14px #dfdfdf;
    background-color: #fff;
}


.img-wrapper {
    width: 100%;
}

.img-wrapper image {
    width: 100%;
}

.name {
    width: 90%;
    margin: 0 auto;
    font-size: 12px;
    color: rgb(65, 44, 9);
}

.desc {
    width: 90%;
    margin: 15px auto;
    display: flex;
    justify-content: space-around;
}

.price {
    font-size: 14px;
    color: rgb(208, 2, 27);
}

.try {
    width: 50%;
    overflow: hidden;
    border: 1px solid red;
}

.try text {
    float: left;
    display: block;
    font-size: 10px;
    color: rgb(155, 155, 155);
    border: 1px solid red;
}

.try-img {
    float: right;
    width: 15px;
    height: 10px;
    border: 1px solid red;
    background-color: rgb(205, 128, 0);
}

.title {
    margin: 0px 0 20px 10px;
    border-left: 5px solid rgb(205, 128, 0);
    padding-left: 10px;
    color: rgb(65, 44, 9);
}