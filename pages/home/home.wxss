.header {
    background-color: rgb(245,245,245);
    display: flex;
    align-items: center;
    justify-content: center;
    height: 300px;
}

.header-content {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background-color: #fff;
}

.avatar image {
    width: 100%;
    border-radius: 50%;
    overflow: hidden;
}

.username {
    margin-top: 20px;
    color: rgb(65,44,9);
}

.mask {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
}

.mask text {
    text-decoration: underline;
    color: violet;
    padding: 0 3px;
}

.history {
    padding: 10px;
}

.history-title {
    margin: 10px 0 15px 17px;
    height: 20px;
}

.history-title-big {
    font-size: 17px;
    font-weight: bold;
    line-height: 20px;
    color: rgb(65,44,9);
}

.history-title-small {
    margin-left: 10px;
    font-size: 14px;
    line-height: 20px;
    color: rgb(112,112,112);
}

.nohistory {
    height: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
}

.recommend {
    padding: 10px;
    border-top: 10px solid rgb(245,245,245);
    margin-bottom: 80px;
}

.title {
    margin: 10px 0 20px 10px;
    border-left: 5px solid rgb(205,128,0);
    padding-left: 10px;
    color: rgb(65,44,9);
  }