.clothes-list {
    overflow-x: scroll;
    display: flex;
}

.item {
    position: relative;
    flex: none;
    margin-left: 10px;
    margin-bottom: 20px;
    width: 140px;
    box-shadow: 2px 2px 2px #dfdfdf, -2px 2px 4px #dfdfdf, 2px 4px 14px #dfdfdf;
    background-color: #fff;
}

.item:last-child {
    margin-right: 90px;
}

.img-wrapper {
    width: 140px;
    height: 140px;
}

.img-wrapper image {
    width: 100%;
}

.name {
    width: 116px;
    margin: 0 auto;
    font-size: 12px;
    color: rgb(65, 44, 9);
}

.desc {
    width: 116px;
    margin: 15px auto;
    height: 15px;
    display: flex;
    justify-content: space-around;
}

.price {
    height: 15px;
    font-size: 12px;
    line-height: 15px;
    color: rgb(208, 2, 27);
}

.try {
    height: 15px;
}

.try text {
    display: block;
    width: 100%;
    height: 15px;
    background-color: rgb(184, 142, 71);
    padding: 1px;
    border-radius: 4px;
    margin-left: 6px;
    line-height: 15px;
    text-align: center;
    font-size: 10px;
    color: #fff;
}

.try-img {
    float: right;
    width: 20px;
    height: 10px;
    background-color: rgb(205, 128, 0);
}